CC=gcc

FLAGS = \
		 -Wall \
		 -Wextra \
		 -Wno-parentheses \
		 -Wno-unused-parameter \
		 -Wshadow \
		 -Wunreachable-code \
		 -Os \
		 -g \
		 -fomit-frame-pointer \
		 -DHOST

CFLAGS = $(FLAGS) -std=gnu99
CXXFLAGS = $(FLAGS) -std=c++14 -fsanitize=address

LDFLAGS = -fsanitize=address -lstdc++ 
